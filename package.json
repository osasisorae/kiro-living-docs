{
  "name": "auto-doc-sync",
  "version": "1.0.0",
  "description": "Autonomous Documentation Synchronization System for Kiro projects",
  "main": "dist/index.js",
  "bin": {
    "auto-doc-sync": "dist/cli.js",
    "kiro-docs": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest --run",
    "test:watch": "vitest",
    "dev": "ts-node src/cli.ts",
    "start": "node dist/cli.js",
    "sync": "ts-node src/cli.ts",
    "sync:manual": "ts-node src/cli.ts --trigger=manual",
    "sync:git": "ts-node src/cli.ts --trigger=git-hook",
    "subagent": "ts-node src/subagent/cli.ts",
    "subagent:example": "ts-node src/subagent/example.ts"
  },
  "keywords": [
    "documentation",
    "automation",
    "kiro",
    "sync"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "fast-check": "^3.15.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@types/chokidar": "^1.7.5",
    "@typescript-eslint/parser": "^6.0.0",
    "chokidar": "^4.0.3",
    "dotenv": "^17.2.3",
    "openai": "^6.16.0",
    "typescript": "^5.0.0",
    "zod": "^4.3.5",
    "zod-to-json-schema": "^3.25.1"
  }
}
